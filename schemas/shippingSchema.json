{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://our.company.com/shipping.schema.json",
    "title": "Order",
    "description": "Shipping Information.",
    "type": "object",
    "properties": {
      "productId": {
        "type": "number",
        "minimum": 1000
      },
      "name": {"type": "string"},
      "addr": {"type": "string"},
      "zipcode": {"type": "string"}
    },
    "additionalProperties": false,
    "required": [
      "productId",
      "name",
      "addr",
      "zipcode"
    ]
  }